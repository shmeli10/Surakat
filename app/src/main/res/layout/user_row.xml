<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/userRowContainer"
    style="@style/MW">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userRowAvatar"
        android:layout_width="@dimen/avatar_small_size"
        android:layout_height="@dimen/avatar_small_size"
        android:layout_marginLeft="@dimen/spacing_3x"
        android:layout_marginTop="@dimen/spacing_3x"
        android:layout_marginBottom="@dimen/spacing_3x"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/userRowName"
        style="@style/WW"
        android:layout_toRightOf="@+id/userRowAvatar"
        android:layout_marginTop="@dimen/spacing_3x"
        android:layout_marginLeft="@dimen/spacing_3x"
        android:textSize="@dimen/text_size_2.5x"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        android:text="@string/text_user_name"/>

    <TextView
        android:id="@+id/userRowStatus"
        style="@style/WW"
        android:layout_toRightOf="@+id/userRowAvatar"
        android:layout_below="@+id/userRowName"
        android:layout_marginTop="@dimen/spacing_2x"
        android:layout_marginLeft="@dimen/spacing_3x"
        android:textSize="@dimen/text_size_2.0x"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/text_status"/>

</RelativeLayout>

