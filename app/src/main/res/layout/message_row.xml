<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messageContainer"
    style="@style/MW"
    android:padding="@dimen/spacing_2x">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/messageRowAvatar"
        android:layout_width="@dimen/avatar_chat_size"
        android:layout_height="@dimen/avatar_chat_size"
        android:src="@drawable/default_avatar"/>

    <TextView
        android:id="@+id/messageRowMessageTextView"
        style="@style/WW"
        android:layout_toRightOf="@+id/messageRowAvatar"
        android:layout_alignBottom="@+id/messageRowAvatar"
        android:layout_marginStart="@dimen/spacing_2x"
        android:layout_toEndOf="@+id/messageRowAvatar"
        android:layout_centerVertical="true"
        android:padding="@dimen/spacing_2x"
        android:background="@drawable/message_row_recipient_background"
        android:textSize="@dimen/text_size_1.5x"
        android:textColor="@color/white"
        android:text="..."/>

</RelativeLayout>
