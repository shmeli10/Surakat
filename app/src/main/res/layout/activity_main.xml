<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.shmeli.surakat.ui.MainActivity"
    android:padding="@dimen/spacing_2x">

    <TextView
        android:id="@+id/userListTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_2.0x"
        android:textColor="@color/colorPrimaryDark"
        android:text="@string/text_user_list"/>

    <ListView
        android:id="@+id/userListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/userListTextView"
        android:layout_marginTop="@dimen/spacing_4x"/>

</RelativeLayout>
